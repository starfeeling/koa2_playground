{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "semi": [
            2,
            "never"
        ],
        "arrow-body-style": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-console": 1,
        "no-tabs": 0,
        "object-curly-newline": 0,
        "no-underscore-dangle": 0
    }
}